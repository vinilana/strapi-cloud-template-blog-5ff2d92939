{
  "kind": "collectionType",
  "collectionName": "courses",
  "info": {
    "singularName": "course",
    "pluralName": "courses",
    "displayName": "Course",
    "description": "Main course content type"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "richtext"
    },
    "shortDescription": {
      "type": "text",
      "maxLength": 200
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "thumbnail": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "coverImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "introVideoUrl": {
      "type": "string"
    },
    "duration": {
      "type": "integer",
      "min": 0
    },
    "level": {
      "type": "enumeration",
      "enum": ["beginner", "intermediate", "advanced"]
    },
    "language": {
      "type": "string",
      "default": "English"
    },
    "status": {
      "type": "enumeration",
      "enum": ["draft", "published"],
      "default": "draft"
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "order": {
      "type": "integer",
      "min": 0,
      "default": 1
    },
    "instructor": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::instructor.instructor",
      "inversedBy": "courses"
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::course-category.course-category",
      "inversedBy": "courses"
    },
    "modules": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::module.module",
      "mappedBy": "course"
    },
    "tags": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::tag.tag",
      "inversedBy": "courses"
    }
  }
}