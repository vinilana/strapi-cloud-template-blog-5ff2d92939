{
  "kind": "collectionType",
  "collectionName": "lessons",
  "info": {
    "singularName": "lesson",
    "pluralName": "lessons",
    "displayName": "Lesson",
    "description": "Individual lessons within modules"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "order": {
      "type": "integer",
      "min": 0,
      "default": 1
    },
    "module": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::module.module",
      "inversedBy": "lessons"
    },
    "videoUrl": {
      "type": "string"
    },
    "content": {
      "type": "richtext"
    },
    "duration": {
      "type": "integer",
      "min": 0
    },
    "resources": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": ["files", "images", "videos"]
    }
  }
}