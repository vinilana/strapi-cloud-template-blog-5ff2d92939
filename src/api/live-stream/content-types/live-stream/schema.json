{
  "kind": "collectionType",
  "collectionName": "live_streams",
  "info": {
    "singularName": "live-stream",
    "pluralName": "live-streams",
    "displayName": "Live Stream",
    "description": "Live stream series/masterclass (e.g., weekly Pair Programming sessions)"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "richtext"
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "thumbnail": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "shortDescription": {
      "type": "text",
      "maxLength": 200
    },
    "platform": {
      "type": "enumeration",
      "enum": ["youtube", "twitch", "zoom", "custom"]
    },
    "recurrence": {
      "type": "enumeration",
      "enum": ["none", "daily", "weekly", "biweekly", "monthly"],
      "default": "none"
    },
    "dayOfWeek": {
      "type": "enumeration",
      "enum": ["monday", "tuesday", "wednesday", "thursday", "friday", "saturday", "sunday"]
    },
    "timeOfDay": {
      "type": "string"
    },
    "duration": {
      "type": "integer",
      "min": 0
    },
    "liveStreamStatus": {
      "type": "enumeration",
      "enum": ["active", "paused", "completed"],
      "default": "active"
    },
    "events": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::live-stream-event.live-stream-event",
      "mappedBy": "liveStream"
    },
    "instructor": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::instructor.instructor",
      "inversedBy": "liveStreams"
    },
    "course": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::course.course"
    },
    "defaultMaxAttendees": {
      "type": "integer",
      "min": 0
    },
    "tags": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::tag.tag"
    },
    "isPublic": {
      "type": "boolean",
      "default": true
    },
    "order": {
      "type": "integer",
      "min": 0,
      "default": 1
    }
  }
}